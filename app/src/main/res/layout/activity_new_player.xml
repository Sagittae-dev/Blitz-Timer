<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newPlayerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blitzbackground"
    android:onClick="hideKeyb"
    tools:context=".NewPlayerActivity">

    <EditText
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C6FF00"
        android:ems="10"
        android:hint="Imię"
        android:inputType="textPersonName"
        android:textColor="#EDCBAF"
        android:textColorHint="#908F8F8F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="161dp"
        android:layout_height="45dp"
        android:layout_marginTop="72dp"
        android:text="Imię:"
        android:textAlignment="center"
        android:textColor="#EDCBAF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/surnameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#C6FF00"
        android:ems="10"
        android:hint="Nazwisko"
        android:inputType="textPersonName"
        android:textColor="#EDCBAF"
        android:textColorHint="#908F8F8F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="233dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:text="@string/nazwisko"
        android:textAlignment="center"
        android:textColor="#EDCBAF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <Button
        android:id="@+id/confirmNameAndSurnameButton"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_marginTop="68dp"
        android:onClick="sendNewPlayerToDatabase"
        android:text="Zatwierdź"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surnameText" />
</androidx.constraintlayout.widget.ConstraintLayout>