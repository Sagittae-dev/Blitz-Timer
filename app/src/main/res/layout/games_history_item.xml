<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gamesHistoryItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="403dp"
        android:layout_height="211dp"
        android:layout_gravity="center"
        android:background="@drawable/itemwood">

        <TextView
            android:id="@+id/player1TextView"
            android:layout_width="112dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/vsImageView"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/player2TextView"
            android:layout_width="112dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vsImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/vsImageView"
            android:layout_width="89dp"
            android:layout_height="82dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/vsimage" />

        <ImageView
            android:id="@+id/player1ResultImageView"
            android:layout_width="76dp"
            android:layout_height="92dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/vsImageView"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/player1TextView"
            app:srcCompat="@drawable/numerjeden" />

        <ImageView
            android:id="@+id/player2ResultImageView"
            android:layout_width="93dp"
            android:layout_height="89dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toEndOf="@+id/vsImageView"
            app:layout_constraintTop_toBottomOf="@+id/player2TextView"
            app:srcCompat="@drawable/numerzero" />

        <TextView
            android:id="@+id/whenWasPlayedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/gameTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/player2ResultImageView"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toEndOf="@+id/player1ResultImageView"
            app:layout_constraintTop_toBottomOf="@+id/vsImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>