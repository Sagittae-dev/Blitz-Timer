<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameChooseFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/onTimeTextView"
            android:layout_width="197dp"
            android:layout_height="131dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="16dp"
            android:text="@string/tryb_bardzo_podobny_do_blitz_jednak_tutaj_podczas_wykonania_ruchu_i_klikni_cia_na_timer_graczowi_doliczane_jest_10_sekund_mo_na_dzi_ki_temu_poprzez_szybkie_ruchy_zwi_kszy_swoje_szanse"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutBlitzTextView" />

        <TextView
            android:id="@+id/aboutBlitzTextView"
            android:layout_width="200dp"
            android:layout_height="147dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:text="Blitz jest to najpopularniejszy typ rozgrywki. Nazywany również szachami błyskawicznymi. Gracze mają tutaj z góry określony czas na wszystkie swoje ruchy. Czas danego gracza odlicza się tylko wtedy gdy jest jego ruch"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameModesTextView" />

        <Button
            android:id="@+id/onTimeButton"
            android:layout_width="134dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"

            android:onClick="onSecondPlusClicked"
            android:text="+ 10 sekund"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutBlitzTextView" />

        <TextView
            android:id="@+id/gameModesTextView"
            android:layout_width="233dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Wybierz typ partii..."
            android:textColor="#DF8F2E"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="199dp"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lancelot"
            android:gravity="center"
            android:text="Blitz Timer"
            android:textColor="#DF8F2E"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/blitzTypeButton"
            android:layout_width="134dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"

            android:onClick="onBlitzClicked"
            android:text="blitz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameModesTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
